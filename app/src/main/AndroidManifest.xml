<!--        <activity android:name=".news./newsDetailActivity"></activity>-->

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".news.NewsDetailActivity" />
        <activity android:name=".bookQuotes.BookQuoteDetailActivity" />
        <activity android:name=".user.UserProfileActivity" />
