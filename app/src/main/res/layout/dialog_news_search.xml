<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:id="@+id/nested_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:scrollingCache="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorPrimaryDarkBookStore">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/news_search_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="Cytat"
                        android:minHeight="@dimen/spacing_xxlarge"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColorHint="?attr/primaryTextColor" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_large" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/news_search_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="TytuÅ‚"
                        android:minHeight="@dimen/spacing_xxlarge"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColorHint="?attr/primaryTextColor" />

                </LinearLayout>

                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_large" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/news_search_author"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="Autor"
                        android:minHeight="@dimen/spacing_xxlarge"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColorHint="?attr/primaryTextColor" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorPrimaryBookStore" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/news_search_button_cancel"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/colorAccentBookStore"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:paddingLeft="@dimen/spacing_xsmall"
                    android:paddingRight="@dimen/spacing_xsmall"
                    android:text="Anuluj"
                    android:textColor="?attr/primaryTextColor" />

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/news_search_button_save"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="?attr/colorPrimaryBookStore"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/spacing_xsmall"
                    android:paddingRight="@dimen/spacing_xsmall"
                    android:text="Zapisz"
                    android:textColor="?attr/primaryTextColor" />
            </LinearLayout>
    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

