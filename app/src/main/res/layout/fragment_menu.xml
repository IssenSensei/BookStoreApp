<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_edit_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/menu_profile_edit"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        app:cornerRadius="8sp"
        app:icon="@drawable/profile"
        app:layout_constraintBottom_toTopOf="@+id/app_settings_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/app_settings_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/settings_page_title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        app:cornerRadius="8sp"
        app:icon="@drawable/settings"
        app:layout_constraintBottom_toTopOf="@+id/app_info_button"
        app:layout_constraintEnd_toEndOf="@+id/profile_edit_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/profile_edit_button"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/app_info_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/application_info_page_title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        app:cornerRadius="8sp"
        app:icon="@drawable/info"
        app:layout_constraintBottom_toTopOf="@+id/logout_button"
        app:layout_constraintEnd_toEndOf="@+id/app_settings_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/app_settings_button"
        app:layout_constraintTop_toBottomOf="@+id/app_settings_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        app:cornerRadius="8sp"
        app:icon="@drawable/logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/app_info_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/app_info_button"
        app:layout_constraintTop_toBottomOf="@+id/app_info_button" />
</androidx.constraintlayout.widget.ConstraintLayout>