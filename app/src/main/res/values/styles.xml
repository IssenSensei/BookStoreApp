<resources>
    <style name="Theme.App.Purplish"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="primaryButtonTheme">
            @style/Widget.AppCompat.Button.Colored
        </item>
        <item name="colorPrimaryBookStore">@color/colorPrimaryPurplish</item>
        <item name="colorPrimaryDarkBookStore">@color/colorPrimaryDarkPurplish</item>
        <item name="colorAccentBookStore">@color/colorAccentPurplish</item>
        <item name="primaryTextColor">@color/primaryTextPurplish</item>
        <item name="buttonNormalColor">@color/buttonNormalPurplish</item>
        <item name="buttonHighlightColor">@color/buttonHighlightPurplish</item>
        <item name="buttonTextColor">@color/buttonTextPurplish</item>
    </style>

    <style name="Theme.App.Greenish"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="primaryButtonTheme">
            @style/Widget.AppCompat.Button.Colored
        </item>
        <item name="colorPrimaryBookStore">@color/colorPrimaryGreenish</item>
        <item name="colorPrimaryDarkBookStore">@color/colorPrimaryDarkGreenish</item>
        <item name="colorAccentBookStore">@color/colorAccentGreenish</item>
        <item name="primaryTextColor">@color/primaryTextGreenish</item>
        <item name="buttonNormalColor">@color/buttonNormalGreenish</item>
        <item name="buttonHighlightColor">@color/buttonHighlightGreenish</item>
        <item name="buttonTextColor">@color/buttonTextGreenish</item>
    </style>


    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">#FFF</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">#111</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">#222</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">#f12</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
    </style>


    <style name="customDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">99%</item>
        <item name="android:windowMinWidthMinor">99%</item>
    </style>

    <style name="Yellow.AppCompatRatingBar" parent="Base.Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">?attr/primaryTextColor</item>
        <item name="colorControlActivated">?attr/buttonTextColor</item>
    </style>
</resources>
